<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeProfile">

    <EditText
        android:id="@+id/clinicNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="102dp"
        android:ems="10"
        android:hint="Clinic Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/addressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="220dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/phoneNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="229dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="textPersonName"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/clinicNameEditBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:onClick="onClick"
        android:text="Edit" />

    <Button
        android:id="@+id/clinicNameUpdateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="101dp"
        android:onClick="onClick"
        android:text="Update"
        tools:visibility="invisible"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/addressEditBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="218dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:onClick="onClick"
        android:text="Edit" />

    <Button
        android:id="@+id/addressUpateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="219dp"
        android:layout_marginEnd="-3dp"
        android:onClick="onClick"
        android:text="Update"
        tools:visibility="invisible"
        android:layout_marginRight="-3dp"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/phoneNumberEditBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="86dp"
        android:layout_marginRight="86dp"
        android:layout_marginBottom="226dp"
        android:onClick="onClick"
        android:text="Edit" />

    <Button
        android:id="@+id/phoneNumberUpdateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="226dp"
        android:onClick="onClick"
        android:text="Update"
        tools:visibility="invisible"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/profileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Profile"
        android:textSize="30sp" />
</RelativeLayout>